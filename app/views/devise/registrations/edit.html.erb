<h2>Modifier <%= resource_name.to_s.humanize %></h2>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "Laisser vide si vous ne voulez pas modifier",
                  required: false,
                  input_html: { autocomplete: "Nouveau mot de passe" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "Nouveau mot de passe" } %>
      <%= f.input :current_password,
                  # hint: "Vous avez besoin d'entrer votre précédent mot de passe pour valider les changements",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <div class="button-search">
        <%= f.button :submit, "Mettre à jour" %>
      </div>
    </div>
  <% end %>

  <p>Mécontent ?
    <div class="button-little">
      <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr ?" }, method: :delete %>
    </div>
  </p>
  <%= link_to "Retour", :back %>
</div>
